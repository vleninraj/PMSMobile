<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/txtadmobvno"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:text="--"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtadtenantname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txtadmobvno"
            android:fontFamily="@font/nunito_regular"
            android:text="--"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtadAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunito_regular"
            android:paddingLeft="10dp"
            android:text="Rs : 2000"
            android:textColor="#0D9228"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtadmonthyear"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtadmobvno"
            android:fontFamily="@font/nunito_regular"
            android:text="April 2021"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:fontFamily="@font/nunito_regular"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/relmain"
        android:background="#B8CBEB"/>

</RelativeLayout>